<div class="container">
  <div class="row">
    <div class="bg-light">
      <h4>新規会員登録</h4>
    </div>
  </div>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <div class="form-group row">
    <label for="inputLast_name" class="col-sm-2 col-form-label">名前</label>
    <div class="field">
      <p>(性)</p>
      <%= f.text_field :last_name, :placeholder => "令和", autofocus: true, class:"col-sm-4" %>
      <div class="col"></div>
      <p>(名)</p>
      <% f.text_field :first_name, :placeholder => "道子", class:"col-sm-4" %>
    </div>
  </div>

  <div class="form-group row">
    <label for="inputKana" class="col-sm-2 col-form-label">フリガナ</label>
    <div class="field">
      <p>(セイ)</p>
      <%= f.text_field :last_name_kana, :placeholder => "レイワ", class:"col-sm-4" %>
      <div class="col"></div>
      <p>(メイ)</p>
      <%= f.text_field :first_name_kana, :placeholder => "ミチコ", class:"col-sm-4" %>
    </div>
  </div>

  <div class="form-group row">
    <label for="inputEmail" class="col-sm-2 col-form-label">メールアドレス</label>
    <div class="field">
      <%= f.email_field :email, :placeholder => "sample@example.com", autocomplete: "email", class:"col-sm-4" %>
    </div>
  </div>

  <div class="form-group row">
    <label for="inputPostal_code" class="col-sm-2 col-form-label">郵便番号(ハイフンなし)</label>
    <div class="field">
      <%= f.text_field :postal_code, :placeholder => "0000000", class:"col-sm-4" %>
    </div>
  </div>

  <div class="form-group row">
    <label for="inputAddress" class="col-sm-2 col-form-label">住所</label>
    <div class="field">
      <%= f.text_field :address, :placeholder => "東京都渋谷区代々木神園町0-0", class:"col-sm-8" %>
    </div>
  </div>

  <div class="form-group row">
    <label for="inputTelephone_number" class="col-sm-2 col-form-label">電話番号(ハイフンなし)</label>
    <div class="field">
      <%= f.text_field :telephone_number, :placeholder => "00000000000", class:"col-sm-4" %>
    </div>
  </div>

  <div class="form-group row">
    <label for="inputPassword" class="col-sm-2 col-form-label">パスワード(6文字以上)</label>
    <div class="field">
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %>
    <%= f.password_field :password, autocomplete: "new-password", class:"col-sm-4" %>
    </div>
  </div>

  <div class="form-group row">
    <label for="inputPassword_confirm" class="col-sm-2 col-form-label">パスワード(確認用)</label>
    <div class="field">
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"col-sm-4" %>
    </div>
  </div>

  <div class="form-group row">
    <label for="inputButton" class="col-sm-2 col-form-label"></label>
    <div class="field">
      <%= f.submit "新規登録", class:"btn btn-success" %>
    </div>
  </div>
  <br>

  <div class="row">
    <div class="bg-light">
      <h4>既に登録済みの方</h4>
    </div>
  </div>

  <div class="row">
    <p><%= link_to 'こちら', new_customer_session_path %>からログインしてください。</p>
  </div>
  <% end %>
</div>