<div class="container">
  <div class="row">
    <h4>商品一覧(全<%= @items.count %>件)</h4>
  </div>

  <div class="row">
    <% @items.each do |item| %>
        <div class="card">
          <div class="card-block">
            <div class="PostImage">
              <%= item.image %>
            </div>
           <div class="PostContent">
                 <p><%= item.name %></p>
                 <p><%= item.price %></p>
            </div>
          </div>
        </div>
    <% end %>
  </div>