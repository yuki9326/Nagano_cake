<div class="container">
  <div class="row">
    <h4><strong>商品一覧</strong>(全<%= @items.count %>件)</h4>
  </div>

    <% @items.each do |item| %>
    <div class="container pull-left table-responsive">
      <div class="d-flex">
        <div class="flex-fill">
          <table class="table table-borderless">
            <tr>
              <td><%= link_to item_path(item.id) do %>
              <%= attachment_image_tag item, :image, size: "200x100" %>
              <% end %>
              </td>
            </tr>

            <tr>
              <td><%= item.name %></td>
            </tr>

            <tr>
              <td>¥<%= item.price.to_s(:delimited) %></td>
            </tr>
          </table>
        </div>
        <% end %>
      </div>
  </div>
</div>