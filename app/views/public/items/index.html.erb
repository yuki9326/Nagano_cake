<div class="container">
  <div class="row">
    <h4>商品一覧(全<%= @items.count %>件)</h4>
  </div>

  <div class="row">
    <% @items.each do |item| %>
    <div class="col-md-3">
      <div class="card">
        <%= image_tag item.image_id, class:'card-img-top' %>
        <%= item.name %>
        <%= item.price %>
      </div>
    </div>
    <% end %>
  </div>
</div>