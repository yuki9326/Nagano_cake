<div class="container">
  <div class="row">
    <h4><strong>商品一覧</strong>(全<%= @items.count %>件)</h4>
  </div>

  <div class="d-flex flex-wrap justify-content-between">
    <% @items.each do |item| %>
      <div>
        <%= link_to item_path(item.id) do %>
          <%= attachment_image_tag item, :image, size: "250x150" %>
        <% end %>
         <p><%= item.name %></p>
         <p>¥<%= item.price.to_s(:delimited) %></p>
      </div>
    <% end %>
  </div>

  <%= paginate @items %>
</div>

