<div class="container">
 <div class="row">
    <div class="col">
    <%= attachment_image_tag @item, :image, size: '500x300' %>
    </div>

    <div class="col">
    <%= @item.name %>
    <%= @item.introduction %>
    <br>
    <p>¥<%= (@item.price * 1.1).floor.to_s(:delimited) %>(税込)</p>

    </div>
  </div>
  <div class="row justify-content-around">
    <div class="col-4"></div>
    <div class="col-4"><%= link_to '編集する', edit_admin_item_path(@item.id), class:"btn btn-success btn-lg" %></div>
  </div>
</div>