<div class="container">
  <div class="row">
    <div class="bg-light">
      <h4>注文情報入力</h4>
    </div>
  </div>

  <div class="row">
    <%= form_with model: @order, local: true do |f| %>
    <strong>支払方法</strong>
    <div class="radio-inline">
      <%= f.radio_button :payment_method, :クレジットカード, checked: "checked" %>
      <%= f.label :クレジットカード, class: "payment_method_label" %>
    </div>
    <div class="radio-inline">
      <%= f.radio_button :payment_method, :銀行振込 %>
      <%= f.label :銀行振込, class: "payment_method_label" %>
    </div>
     <strong>お届け先</strong>
    <div class="radio-inline">
      <%= f.radio_button :address, :ご自身の住所 %>
      <%= f.label :ご自身の住所, value: :ご自身の住所 %>
      <p>〒<%= current_customer.postal_code %><%= current_customer.address %></p>
    </div>


    <div class="radio-inline">
    　<%= f.radio_button :address, :"登録済住所を選択" %>
      <%= f.label :address, "登録済住所を選択", value: :"登録済住所を選択" %>
      <p><%= f.collection_select(:address, Address.all, :id, :full_address) %></p>
    </div>

    <div class="raidio-inline">
      <%= f.radio_button :address, :"新しいお届け先" %>
      <%= f.label :address, "新しいお届け先", value: :"新しいお届け先" %>
    </div>

    <div class="form-group row">
    <label for="inputPostal_code" class="col-sm-2 col-form-label">郵便番号(ハイフンなし)</label>
    <%= f.text_field :postal_code, :placeholder => "0000000" %>
    </div>
    <div class="form-group row">
    <label for="inputAddress" class="col-sm-2 col-form-label">住所</label>
    <%= f.text_field :address, :placeholder => "東京都渋谷区代々木神園町0-0" %>
  </div>
  <div class="form-group row">
    <label for="inputName" class="col-sm-2 col-form-label">宛名</label>
    <%= f.text_field :name, :placeholder => "令和道子" %>
  </div>

  <div class="form-group row">
    <div class="mx-auto">
      <%= f.submit '確認画面へ進む', class:"btn btn-primary" %>
    </div>
    <% end %>
    </div>
</div>