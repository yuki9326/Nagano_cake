<div class="container">
  <div class="row">
    <div class="bg-light">
      <h4>注文履歴詳細</h4>
    </div>
  </div>

  <div class="row">
    <strong>注文情報</strong>
    <table class="table table-bordered">
      <tr>
        <th>注文日</th>
        <td><%= @order.created_at %></td>
      </tr>

      <tr>
        <th>配送先</th>
        <td><%= @order.full_address %></td>
      </tr>

      <tr>
        <th>支払方法</th>
        <td></td>
      </tr>

      <tr>
        <th>ステータス</th>
        <td></td>
      </tr>
    </table>

    <strong>請求情報</strong>
    　<table class="table table-bordered">
    　 <tr>
    　   <th>商品合計</th>
    　   <td><%= @total.floor.to_s(:delimited) %></td>
    　 </tr>

    　 <tr>
    　   <th>配送料</th>
    　   <td><%= @order.shipping_cost %></td>
    　 </tr>

    　 <tr>
    　   <th>ご請求額</th>
    　   <td><%= (@total + @order.shipping_cost).floor.to_s(:delimited) %></td>
    　 </tr>
    　</table>
  </div>

  <div class="row">
    <strong>注文内容</strong>
    <table class="table table-bordered">
      <thead class="thead-light">
        <tr>
          <th>商品</th>
          <th>単価(税込)</th>
          <th>個数</th>
          <th>小計</th>
        </tr>
      </thead>

      <tbody>
        <% @order_details.each do |order_detail| %>
        <tr>
          <td><%= order_detail.item.name %></td>
          <td><%= order_detail.price %></td>
          <td><%= order_detail.amount %></td>
          <td><%= (order_detail.price * order_detail.amount).floor.to_s(:delimited) %></td>
        </tr>
      </tbody>
    </table>
  </div>
</div>