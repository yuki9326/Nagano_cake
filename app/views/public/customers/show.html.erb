<div class="container">
  <div class="row">
    <div class="bg-light">
      <h4>マイページ</h4>
    </div>
  </div>
  <br>

  <div class="row">
    <strong>登録情報</strong>
    <%= link_to '編集する', edit_customer_path(@customer.id), class:"btn btn-success edit-link" %>
  </div>
  <br>


  <div class="row">
    <table class="table table-bordered1">
      <tr>
        <th class="table-secondary">氏名</th>
        <td><%= @customer.last_name %><%= @customer.first_name %></td>
      </tr>

      <tr>
        <th class="table-secondary">カナ</th>
        <td><%= @customer.last_name_kana %><%= @customer.first_name_kana %></td>
      </tr>

      <tr>
        <th class="table-secondary">郵便番号</th>
        <td><%= @customer.postal_code %></td>
      </tr>

      <tr>
        <th class="table-secondary">住所</th>
        <td><%= @customer.address %></td>
      </tr>

      <tr>
        <th class="table-secondary">電話番号</th>
        <td><%= @customer.telephone_number %></td>
      </tr>

      <tr>
        <th class="table-secondary">メールアドレス</th>
        <td><%= @customer.email %></td>
      </tr>
    </table>
  </div>

  <div class="row">
    <strong>配送先　　<%= link_to '一覧を見る', addresses_path, class:"btn btn-primary" %></strong>
  </div>
  <br>

  <div class="row">
    <strong>注文履歴　<%= link_to '一覧を見る', orders_path, class:"btn btn-primary" %> </strong>
  </div>
</div>