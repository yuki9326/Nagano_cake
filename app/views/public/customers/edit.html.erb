<div class="container">
  <div class="row">
    <div class="bg-light">
      <h4>会員情報編集</h4>
    </div>
  </div>

  <%= form_with model: @customer, local: true do |f| %>
  <div class="form-group row">
    <label for="inputFull_name" class="col-sm-2 col-form-label">氏名</label>
    <p><%= f.text_field :last_name %>　<%= f.text_field :first_name %></p>
  </div>

  <div class="form-group row">
    <label for="inputFull_name_kana" class="col-sm-2 col-form-label">フリガナ</label>
    <p><%= f.text_field :last_name_kana %>　<%= f.text_field :first_name_kana %></p>
  </div>

  <div class="form-group row">
    <label for="inputPostal_code" class="col-sm-2 col-form-label">郵便番号</label>
    <%= f.text_field :postal_code %>
  </div>

  <div class="form-group row">
    <label for="inputAddress" class="col-sm-2 col-form-label">住所</label>
    <%= f.text_field :address, size: 60 %>
  </div>

  <div class="form-group row">
    <label for="inputTelephone_number" class="col-sm-2 col-form-label">電話番号</label>
    <%= f.text_field :telephone_number %>
  </div>

  <div class="form-group row">
    <label for="inputEmail" class="col-sm-2 col-form-label">メールアドレス</label>
    <%= f.text_field :email %>
  </div>

  <div class="form-group row">
    <div class="col">
      <%=f.submit'編集内容を保存', class:"btn btn-success" %>
    </div>
    <div class="col">
      <%= link_to '退会する', customers_confirm_path, class:"btn btn-danger" %>
    </div>
  </div>
  <% end %>
</div>