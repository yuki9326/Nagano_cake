<div class="container">
  <div class="row">
    <div class="bg-light">
      <h4>配送先編集</h4>
    </div>
  </div>
  <br>

  <%= form_with model: @address, local: true do |f| %>
  <div class="form-group row">
    <label for="inputPostal_code" class="col-sm-2 col-form-label">郵便番号(ハイフンなし)</label>
    <%= f.text_field :postal_code, class:"col-sm-4" %>
  </div>

  <div class="form-group row">
    <label for="inputAddress" class="col-sm-2 col-form-label">住所</label>
    <%= f.text_field :address, class:"col-sm-4" %>
  </div>

  <div class="form-group row">
    <label for="inputName" class="col-sm-2 col-form-label">宛名</label>
    <%= f.text_field :name, class:"col-sm-4" %>
    <%= f.submit '変更内容を保存', class:"btn btn-success" %>
  </div>
  <% end %>
</div>