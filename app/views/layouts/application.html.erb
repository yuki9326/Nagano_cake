<!DOCTYPE html>
<html>
  <head>
    <title>NaganoCake</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <nav class="navbar navbar-expand-lg">
        <div class="container-fluid">
          <%= link_to image_tag("logo.jpg"), "/",class: "navbar-brand" %>
          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarNavDropdown">
            <ul class="navbar-nav ml-auto">
              <% if customer_signed_in? %>
              <li>マイページ</li>
              <li>商品一覧</li>
              <li>カート</li>
              <li><%= link_to "ログアウト", destroy_customer_session_path, method: :delete %></li>
              <% else %>
              <li><%= link_to 'About', about_path, class:"nav-link text-dark btn btn-outline-dark" %></li>
              <div class="col"></div>
              <li><%= link_to '商品一覧', items_path,class:"nav-link text-dark btn btn-outline-dark" %></li>
              <div class="col"></div>
              <li><%= link_to '新規登録', new_customer_registration_path,class:"nav-link text-dark btn btn-outline-dark" %></li>
              <div class="col"></div>
              <li><%= link_to 'ログイン', new_customer_session_path,class:"nav-link text-dark btn btn-outline-dark" %></li>
              <% end %>
            </ul>
          </div>
        </div>
      </nav>
    </header>
    <main class="mb-auto">
    <%= yield %>
    </main>
  </body>
</html>
