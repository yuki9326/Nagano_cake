<div class="container">
  <div class="row">
    <div class="bg-light">
      <h4>ジャンル編集</h4>
    </div>
  </div>
  <br>
  <br>

  <%= form_with model: @genre, url:admin_genre_path(@genre.id), local: true do |f| %>
  <div class= "form-group row">
    <label for="inputName" class="col-sm-2 col-form-label">ジャンル名</label>
    <%= f.text_field :name %>
    <div class="col-1"></div>
    <%= f.submit '変更を保存', class:"btn btn-success" %>
  </div>
  <% end %>
</div>