<div class="container">
  <div class="row">
    <div class="bg-light">
      <h4>ジャンル一覧・追加</h4>
    </div>
  </div>
  <br>
  <br>

  <%= form_with model: @genre, url:admin_genres_path, local: true do |f| %>
  <div class="form-group row">
    <label for="inputName" class="col-sm-2 col-form-label">ジャンル名</label>
    <%= f.text_field :name %>
    <div class="col-1"></div>
    <%= f.submit '新規登録', class:"btn btn-success" %>
  </div>
  <% end %>
  <br>

  <div class="col-md-8 offset-md-1">
  <div class="row">
    <table class="table">
      <thead class="thead-light">
        <tr>
          <th>ジャンル</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @genres.each do |genre| %>
        <tr>
          <td><%= genre.name %></td>
          <td><%= link_to "編集する", edit_admin_genre_path(genre.id), class:"btn btn-success" %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
</div>