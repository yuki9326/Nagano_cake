<div class="container">
  <div class="row">
    <div class="bg-light">
      <h4>商品詳細</h4>
    </div>
  </div>

  <div class="row">
    <%= attachment_image_tag @item, :image_id, :fill, 40, 40, size: '40x40' %>
    <% @items.each do |item| %>
    <div class="form-group row">
      <label for ="inputName" class="col-sm-2 col-form-label">商品名</label>
      <% item.name %>
    </div>

    <div class="form-group row">
      <label for ="inputIntroduction" class="col-sm-2 col-form-label">商品説明</label>
      <% item.introduction %>
    </div>

    <div class="form-group row">
      <label for ="inputGenre" class="col-sm-2 col-form-label">ジャンル</label>
      <% item.genre_id %>
    </div>

    <div class="form-group row">
      <label for ="inputPrice" class="col-sm-2 col-form-label">税込価格<br>（税抜価格)</label>
      <p>(<% item.price %>)円</p>
    </div>

    <div class="form-group row">
      <label for="inputIs_active" class="col-sm-2 col-form-label">販売ステータス</label>
      <% item.is_active %>
    </div>
    <% end %>
  </div>

</div>