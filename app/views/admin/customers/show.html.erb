<div class="container">
  <div class="row">
    <div class="bg-light">
      <h4><%= @customer.full_name %>さんの会員詳細</h4>
    </div>
  </div>

  <div class="row">
    <table class="table table-borderless">
      <thead>
        <tr>
          <th scope ="col"></th>
          <th scope ="col"></th>
        </tr>
      </thead>

      <tbody>
        <tr>
          <th scope="row">会員ID</th>
          <td><%= @customer.id %></td>
        </tr>

        <tr>
          <th scope="row">氏名</th>
          <td><%= @customer.last_name %><%= @customer.first_name %></td>
        </tr>

        <tr>
          <th scope="row">フリガナ</th>
          <td><%= @customer.last_name_kana %><%= @customer.first_name_kana %></td>
        </tr>

        <tr>
          <th scope="row">郵便番号</th>
          <td><%= @customer.postal_code %></td>
        </tr>

        <tr>
          <th scope="row">住所</th>
          <td><%= @customer.address %></td>
        </tr>

        <tr>
          <th scope="row">電話番号</th>
          <td><%= @customer.telephone_number %></td>
        </tr>

        <tr>
          <th scope="row">メールアドレス</th>
          <td><%= @customer.email %></td>
        </tr>

        <tr>
          <th scope="row">会員ステータス</th>
          <td><% if @customer.is_active = true then %>
          　　<p class="text-success">有効</p>
          　　<% else %>
          　　<p class="text-secondary">退会</p>
          　　<% end %></td>
        </tr>
      </tbody>
    </table>
  </div>

  <div class="row justify-content-around">
    <div class="col-4"><%= link_to '編集する', edit_admin_customer_path(@customer.id), class:"btn btn-success" %></div>
    <div class="col-4"><%= link_to '注文履歴一覧を見る', admin_path, class:"btn btn-primary" %></div>
  </div>
</div>