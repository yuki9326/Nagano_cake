<div class="container">
  <div class="row">
  <div class="bg-light">
    </h4><%= @customer.full_name %>さんの会員情報編集</h4>
  </div>
  </div>

  <%= form_with model: @customer, url:admin_customer_path(@customer.id), local: true do |f| %>
  <div class="form-group row">
    <label for="inputID" class="col-sm-2 col-form-label">会員ID</label>
    <%= @customer.id %>
  </div>

  <div class="form-group row">
    <label for="inputName" class="col-sm-2 col-form-label">氏名</label>
    <p><%= f.text_field :last_name, class:"col-sm-4" %>　<%= f.text_field :first_name, class:"col-sm-4" %></p>
  </div>

  <div class="form-group row">
    <label for="inputNamekana" class="col-sm-2 col-form-label">フリガナ</label>
    <p><%= f.text_field :last_name_kana, class:"col-sm-4" %>　<%= f.text_field :first_name_kana, class:"col-sm-4" %></p>
  </div>

  <div class="form-group row">
    <label for="inputPostal_code" class="col-sm-2 col-form-label">郵便番号</label>
    <%= f.text_field :postal_code, size: 16 %>
  </div>

  <div class="form-group row">
    <label for="inputAddress" class="col-sm-2 col-form-label">住所</label>
    <%= f.text_field :address, size: 50 %>
  </div>

  <div class="form-group row">
    <label for="inputTelephone_number" class="col-sm-2 col-form-label">電話番号</label>
    <%= f.text_field :telephone_number, size: 16 %>
  </div>

  <div class="form-group row">
    <label for="inputEmail" class="col-sm-2 col-form-label">メールアドレス</label>
    <%= f.text_field :email, size: 16 %>
  </div>

  <div class="form-group row">
    <label for="inputIs_deleted" class="col-sm-2 col-form-label">会員ステータス</label>
    <p><%= f.radio_button :is_deleted, "TRUE" %>有効　<%= f.radio_button :is_deleted, "FALSE" %>退会</p>
  </div>
  <% end %>
</div>