<div class="container">
  <div class="row">
    <div class="bg-light">
      <h4>注文履歴一覧</h4>
    </div>
  </div>

  <table class="table">
    <thead class="thead-light">
      <tr>
        <th>購入日時</th>
        <th>購入客</th>
        <th>注文数</th>
        <th>注文ステータス</th>
      </tr>
    </thead>

      <% @orders.each do |order| %>
    <tbody>
      <tr>
        <td><%= l order.created_at, format: :long %></td>
        <td><%= order.customer.full_name %></td>
        <td>
          <% total = 0 %>
        <% order.order_details.each do |order_detail|
             total += order_detail.amount
           end %>
        <%= total %>
        </td>
        <td><%= order.status %></td>
      </tr>
    </tbody>
    <% end %>
  </table>
</div>